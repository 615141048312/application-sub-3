<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
	<table class="table">
		<tr></tr>
		<tr>
			<th>name</th>
			<td><%= user.name %></td>
		</tr>
		<tr>
			<th>introduction</th>
			<td><%= user.introduction %></td>
		</tr>
	</table>
	<div class="row">
		<%= link_to edit_user_path(user.id), {:class => "btn btn-default col-xs-12"} do %>
			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		<% end %>
	</div>

	<h2>New book</h2>

	<% if new_book.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= new_book.errors.count %> errors prohibited this obj from being saved:</h2>
	    <ul>
	    <% new_book.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

	<%= form_for(new_book, url:'/books') do |f| %>
		<div class="field row">
			<label for="book_title">Title</label>
			<%= f.text_field :title, class: "col-xs-12 book_title" %>
		</div>
		<div class="field row">
			<label for="book_opinion">Opinion</label>
			<%= f.text_area :body, class: "col-xs-12 book_opinion" %>
		</div>
		<div class="actions row">
			<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
		</div>
	<% end %>
</div>
